<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.irelint.easyandroid">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name=".App"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/BaseAppTheme">
        <activity
            android:name=".mvp.ui.activities.SplashActivity"
            android:excludeFromRecents="false"
            android:theme="@style/BaseAppTheme.Trans">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvp.ui.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".mvp.ui.activities.GalleryActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".mvp.ui.activities.DetailActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>